{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "presenter",
    "compendium"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "window:allow-show",
    "window:allow-hide",
    "window:allow-set-fullscreen",
    "window:allow-destroy",
    "os:allow-os-type"
  ],
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ]
}
